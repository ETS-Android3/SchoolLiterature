<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lighterYellow">

    <EditText
        android:id="@+id/change_note_et"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="Напишите заметку"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:background="@drawable/design_adding_note_et"
        android:textSize="23sp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/mainDark"
        android:textColor="@color/mainDark"
        />

    <EditText
        android:id="@+id/page_num_et"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="номер"
        android:inputType="numberDecimal"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:background="@drawable/design_adding_note_et"
        android:layout_below="@id/change_note_et"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColorHint="@color/mainDark"
        android:textColor="@color/mainDark"
        />

    <ImageButton
        android:id="@+id/submit_change_note"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_enter"
        android:background="@drawable/round_shape"
        android:layout_below="@id/change_note_et"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorWhite"/>

    <ProgressBar
        android:id="@+id/change_note_loadingPB"
        style="?android:attr/progressBarStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/change_note_et"
        android:layout_marginRight="17dp"
        android:layout_marginTop="17dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/mainDark"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone"/>

</RelativeLayout>