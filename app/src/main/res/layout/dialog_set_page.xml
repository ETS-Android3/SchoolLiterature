<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_set_page"
    android:background="@color/lighterYellow">

    <TextView
        android:id="@+id/dialog_page_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="Перейти к странице"
        android:textSize="25sp"
        android:textColor="@color/Darker"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/page_num_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="номер"
        android:inputType="numberDecimal"
        android:layout_marginRight="10dp"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:background="@drawable/design_adding_note_et"
        android:layout_toLeftOf="@id/submit_page_bn"
        android:textSize="25sp"
        android:layout_below="@id/dialog_page_tv"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@id/dialog_page_tv"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColorHint="@color/mainDark"
        android:textColor="@color/mainDark"
        />

    <ImageButton
        android:id="@+id/submit_page_bn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_enter"
        android:background="@drawable/round_shape"
        android:layout_alignTop="@id/page_num_et"
        android:layout_alignRight="@id/dialog_page_tv"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>