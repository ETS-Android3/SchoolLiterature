<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighterYellow">

    <FrameLayout
        android:id="@+id/managerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </FrameLayout>

    <ImageButton
        android:id="@+id/open_text_bn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/quat_circle_shape_left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_bn_text"
        />

    <ImageButton
        android:id="@+id/open_notes_bn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/quat_circle_shape_right"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_bn_notes"
        />

</RelativeLayout>